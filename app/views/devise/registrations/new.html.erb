<div class="w-full max-w-xs mx-auto">
  <h2 class="text-2xl font-bold mb-4">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :role, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <div class="flex items-center">
        <div class="mr-2">
          <%= f.radio_button :role, :farmer, autocomplete: "role", class: "form-radio" %>
        </div>
        <div>
          <%= f.label :role, "Farmer", class: "text-sm" %>
        </div>
      </div>
      <div class="flex items-center">
        <div class="mr-2">
          <%= f.radio_button :role, :buyer, autocomplete: "role", class: "form-radio" %>
        </div>
        <div>
          <%= f.label :role, "Buyer", class: "text-sm" %>
        </div>
      </div>
    </div>

    <div class="mb-4">
      <%= f.label :first_name, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.text_field :first_name, autocomplete: "first-name", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-4">
      <%= f.label :last_name, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.text_field :last_name, autocomplete: "last-name", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-4">
      <%= f.label :address, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.text_field :address, autocomplete: "address", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-4">
      <%= f.label :contact_number, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.text_field :contact_number, autocomplete: "contact-number", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-4">
      <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <% if @minimum_password_length %>
        <em class="text-xs text-gray-600">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-6">
      <%= f.label :password_confirmation, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="flex items-center justify-between">
      <%= f.submit "Sign up", class: "bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    </div>
  <% end %>
</div>
