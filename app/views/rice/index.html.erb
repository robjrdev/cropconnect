<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center mb-5">
    <h1 class="font-bold text-4xl">Rice Market</h1>
    <%if current_user.role == 'farmer'%>
      <%= link_to 'New rice', new_rice_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
    <%end%>
  </div>

  <div id="rice" class="flex flex-wrap justify-center">
    <% @rice.each do |rice| %>
  <div class="flex flex-col bg-gray-100 rounded-lg p-4 items-center">
    <p class="text-xl font-bold"><%= rice.name %></p>
    <p class="text-gray-600">Bidding Price: <%= rice.bidding_price %></p>

    <%= form_with(model: Bid.new, url: bids_path, method: :post) do |form| %>
      <%= form.hidden_field :rice_id, value: rice.id %>

      <div class="field">
        <%= form.label :bidding_price %>
        <%= form.text_field :bidding_price %>
      </div>

      <div class="actions">
        <%= form.submit "Place Bid" %>
      </div>
    <% end %>
  </div>
<% end %>
  </div>
</div>
