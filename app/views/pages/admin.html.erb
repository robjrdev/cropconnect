<div class="admin">
  <h1 class="text-2xl font-bold mb-4">Admin Dashboard</h1>
  <div class="flex flex-wrap gap-4 justify-center">
    <% if @rice.any? %>
      <% @rice.each do |rice| %>
        <%= rice.user.first_name %>
        <div class="flex flex-col bg-gray-100 rounded-lg p-4 items-center">
          <p class="text-xl font-bold mb-2"><%= rice.name %></p>
          <p class="text-gray-600">Bidding Price: <%= rice.bidding_price %></p>

          <!-- Display ratings or ratings form -->
          <% if rice.ratings.any? %>
            <% rice.ratings.each do |rating| %>
              <p>Age: <%= rating.age %></p>
              <p>Whiteness: <%= rating.whiteness %></p>
              <p>Dryness: <%= rating.dryness %></p>
              <p>Pureness: <%= rating.pureness %></p>
            <% end %>
          <% else %>
            <%= form_for(rice.ratings.new) do |f| %>
              <%= f.hidden_field :rice_id, value: rice.id %>
              <div>
                <%= f.label :age %>
                <%= f.text_field :age %>
                <!-- Add other rating form fields here -->
              </div>
              <div>
              <%= f.label :whiteness %>
              <%= f.text_field :whiteness %>
             </div>
            <div>
              <%= f.label :dryness %>
              <%= f.text_field :dryness %>
            </div>
            <div>
              <%= f.label :pureness %>
              <%= f.text_field :pureness %>
            </div>
              <div>
                <%= f.submit "Submit Rating" %>
              </div>
            <% end %>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <p>No rice available to rate.</p>
    <% end %>
  </div>
</div>
