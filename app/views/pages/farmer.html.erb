<div class="bg-gray-100 min-h-screen py-8 px-4 sm:px-8 lg:px-16 xl:px-20">
  <h1 class="text-4xl font-bold text-center mb-8">Farmer Page</h1>
  <%= link_to 'New rice', new_rice_path, class: "w-32 rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium mb-1 text-center" %>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
    <% @user_rice.each do |rice| %>
      <div class="bg-white rounded-lg shadow-lg p-6">
        <div class="flex items-center justify-center h-48">
          <%= link_to image_tag(rice.image, class: "rounded"), rice.image%>
        </div>
        <div class="mt-6">
          <h2 class="text-xl font-bold mb-4"><%= rice.name %></h2>
          <p class="text-gray-600 mb-4">Bidding Price: <%= rice.bidding_price %></p>
          <% if rice.ratings.blank? %>
            <p class="text-gray-500">No ratings yet!</p>
          <% else %>
            <ul class="text-gray-700 mb-4">
              <% rice.ratings.each do |rating| %>
                <li>
                  <strong>Age:</strong> <%= rating.age %>
                  <br />
                  <strong>Whiteness:</strong> <%= rating.whiteness %>
                  <br />
                  <strong>Dryness:</strong> <%= rating.dryness %>
                  <br />
                  <strong>Pureness:</strong> <%= rating.pureness %>
                </li>
                <% if rating != rice.ratings.last %>
                  <hr class="my-2">
                <% end %>
              <% end %>
            </ul>
          <% end %>
        </div>
        <div class="flex justify-end mt-4">
          <%= button_to 'Delete', rice_path(rice), method: :delete, data: { confirm: 'Are you sure you want to delete this rice?' }, class: "text-red-500" %>
          <%= link_to 'Edit', edit_rice_path(rice), class: "ml-2 text-blue-500" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
